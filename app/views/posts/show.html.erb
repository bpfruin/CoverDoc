<%- model_class = Post -%>
<div class="page-header">
  <h1><%=t '.title', :default => "Post ##{@post.id}" %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @user.email %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @post.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:start_date) %>:</strong></dt>
  <dd><%= @post.start_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:end_date) %>:</strong></dt>
  <dd><%= @post.end_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:fee) %>:</strong></dt>
  <dd><%= "$#{@post.fee}0" %></dd>
  <dt><strong><%= model_class.human_attribute_name(:location) %>:</strong></dt>
  <dd><%= @post.location %></dd>
  <dt><strong><%= model_class.human_attribute_name(:specialties) %>:</strong></dt>
  <dd><%= @field %></dd>

</dl>

<div class="form-actions">

  

  
  <%= link_to t('.message_user', :default => ("Express Interest")),
              new_message_path(:post_id => @post.id), :class => 'btn'  %>

  <%= link_to t('.back', :default => t("helpers.links.back")),
              posts_path, :class => 'btn'  %>

  <% if @post.user_id == @this_user.id %>

  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_post_path(@post), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              post_path(@post),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>

              <% end %>
</div>
