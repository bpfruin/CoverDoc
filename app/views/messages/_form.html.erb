<%= simple_form_for @message, :html => { :class => 'form-horizontal' } do |f| %>
  
  <%= f.input :body %>
  <% f.input :post_id, :as => :hidden, :input_html => { :value => @post.id } %>
  <% f.input :poster_id, :as => :hidden, :input_html => { :value => @post.user_id } %>




  <%= f.hidden_field :post_id, :value => @post.id %>
    <%= f.hidden_field :poster_id, :value => @post.user_id %>

  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                messages_path, :class => 'btn' %>
  </div>
<% end %>
